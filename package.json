{
    "name": "swimmy",
    "productName": "Swimmy",
    "version": "0.2.0",
    "description": "Swimmy is simple GUI tool for manage status of docker-compose",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mitsu-ksgr/swimmy.git"
    },
    "author": "mitsu-ksgr <mitsu.naka.dev@gmail.com>",
    "homepage": "https://github.com/mitsu-ksgr/swimmy/blob/develop/README.md",
    "main": "./src/main.js",
    "dependencies": {
        "electron": "^1.4.10",
        "jquery": "^3.1.1"
    },
    "devDependencies": {
        "electron-packager": "^8.3.0"
    },
    "scripts": {
        "release-linux"  : "electron-packager . Swimmy --out=./out --overwrite --asar --version=1.4.8 --platform=linux  --arch=x64",
        "release-darwin" : "electron-packager . Swimmy --out=./out --overwrite --asar --version=1.4.8 --platform=darwin --arch=x64 --icon=./images/icon/swimmy.icns",
        "release-win32"  : "electron-packager . Swimmy --out=./out --overwrite --asar --version=1.4.8 --platform=win32  --arch=x64 --icon=./images/icon/swimmy.ico ",
        "release-build"  : "npm install && npm prune && npm run release-linux && npm run release-darwin && npm run release-win32",
        "release-build-with-docker" : "docker run --rm -v ${PWD}:/project -v ~/.electron:/root/.electron electronuserland/electron-builder:wine /usr/local/bin/npm run release-build"
    }
}
